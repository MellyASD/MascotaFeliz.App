@page
@model MascotaFeliz.App.Frontend.Pages.ListaMascotasModel
@{
}
<head>
<style>


h1 {
  color: brown;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  font-style: bold italic;
  margin-left: 40px;
  text-shadow: 7px 4px 5px white;
}
#table
{
    width: 100%
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    border: 1px solid black;
}
th
{

}
tr
{
width: 80%
}
th, td {
  padding: 12px;
  text-align: left;
  border-bottom: 1px solid black;
  border-style: hidden;
  background-color: rgba(244, 164, 96, 0.3);
}
tr:hover 
{
    background-color: rgba(255, 99, 71, 0.3);
}
.btn-primary
{

}
</style>
</head>
<h1>Listado de Mascotas</h1>
<table class="table">
     <tr>
        <th>Nombre</th>
        <th>Color</th>
        <th>Nombre Dueño</th>

    </tr>
    @foreach (var mascota in Model.listaMascotas)
    {
        <tr>
            <td>@mascota.Nombre</td>
            <td>@mascota.Color</td>
            <td>@mascota.Dueno.Nombres</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./DetallesMascotas" asp-route-mascotaId="@mascota.Id">
                    Detalle Mascota
                </a>
            </td>
             <td>
                <a class="btn btn-primary table-btn" asp-page="./EditarMascotas" asp-route-mascotaId="@mascota.Id">
                    Editar Mascota
                </a>
            </td>
            
           
            
        </tr>
    }
</table>
<a class = "btn btn-primary table-btn" asp-page="./EditarMascotas" class="btn-default">Adicionar Mascotas</a>